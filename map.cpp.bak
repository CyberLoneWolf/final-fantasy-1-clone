#include "map.h"

Map::Map() {
	MapWidth = 0;
	MapHeight = 0;
	TileSize = 0;
}

Map::~Map() {
}

void Map::Initialize(int MWidth, int MHeight, int TSize) {
	MapWidth = MWidth;
	MapHeight = MHeight;
	TileSize = TSize;

	walkability = new int* [MapHeight];
	for (int i = 0; i < MapHeight; i++) {
		walkability[i] = new int[MapWidth];
	}
}

void Map::UnInitialize() {
	// cleanup walkability array
	for (int i = 0; i < MapHeight; i++) {
		delete[] walkability[i];
		walkability[i] = 0;
	}
	delete[] walkability;
	walkability = 0;
}

int Map::GetMapWidth() { 
	if (MapWidth >= 0) {
		return MapWidth; 
	} else {
		return 0;
	}
}

int Map::GetMapHeight() { 
	if (MapHeight >= 0) {
		return MapHeight; 
	} else {
		return 0;
	}
}

int Map::GetTileSize() { 
	if (TileSize >= 0) {
		return TileSize; 
	} else {
		return 0;
	}
}

void Map::SetValue(int X, int Y, int Value) { 
	walkability[X][Y] = Value; 
}

int Map::GetValue(int X, int Y) { 
	return walkability[X][Y]; 
}
